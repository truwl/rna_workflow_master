FROM broadinstitute/gatk:latest

MAINTAINER Brad Sickler "brad.sickler@mode3consulting.com"
LABEL version="1.0"

# This is necessary because evidently our aws doesn't understand DNS outside of AWS... good times
RUN echo "nameserver 8.8.8.8" > /etc/resolv.conf && apt-get update && apt-get install -y fastqc vim

# Add a few things to the /opt/miniconda install
RUN echo "nameserver 8.8.8.8" > /etc/resolv.conf && /opt/miniconda/bin/conda install --yes -c conda-forge awscli

